# Docker Compose Environment Variables
# Copy this file to .env and adjust the values for your production environment

# =============================================================================
# DOMAINS
# =============================================================================
# Keycloak authentication domain
KEYCLOAK_DOMAIN=auth.llv24.de

# Urlaubsverwaltung application domain
APP_DOMAIN=urlaub.llv24.de

# Mailpit webinterface domain (optional, for testing emails)
MAILPIT_DOMAIN=mail.llv24.de

# =============================================================================
# SSL / ACME (Let's Encrypt)
# =============================================================================
# Email address for Let's Encrypt certificate notifications
ACME_EMAIL=admin@llv24.de

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_DB=urlaubsverwaltung
POSTGRES_USER=urlaubsverwaltung
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# =============================================================================
# KEYCLOAK
# =============================================================================
# Keycloak admin credentials
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_SECURE_ADMIN_PASSWORD

# =============================================================================
# OAUTH2 / OIDC
# =============================================================================
# OAuth2 client credentials for the urlaubsverwaltung application
# These must match the client configuration in Keycloak
OAUTH_CLIENT_ID=urlaubsverwaltung
OAUTH_CLIENT_SECRET=CHANGE_ME_SECURE_CLIENT_SECRET

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
# Email sender configuration
MAIL_FROM=noreply@llv24.de
MAIL_FROM_DISPLAY_NAME=Urlaubsverwaltung
MAIL_REPLY_TO=noreply@llv24.de
MAIL_REPLY_TO_DISPLAY_NAME=Urlaubsverwaltung

# SMTP server configuration
# For testing, use 'mailpit' as host (included in docker-compose)
# For production, configure your SMTP server
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=

# For production SMTP server (e.g., Gmail, SendGrid, etc.)
# Uncomment and configure:
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# =============================================================================
# CALENDAR
# =============================================================================
CALENDAR_ORGANIZER=noreply@llv24.de
